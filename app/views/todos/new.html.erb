<%= form_for @todo, url:{action:"create"}, :method => :post do |f| %>
  
  <% if @todo.errors.any? %>
  <h2>The following erros has prevented the todo to being saved</h2>
  
    <% @todo.errors.full_messages.each do |msg| %>
    <li><%= msg%></li>
    <%end%>
  
  <%end%>
  
  <p>
  <%= f.label :name %> <br>
  <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :description %> <br>
  <%= f.text_area :description, size: "60x12" %>
  </p>
  <%= f.submit "Create" %>
<% end %>

